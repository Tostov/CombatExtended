<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Mechanoids</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>
		
		  <li Class="PatchOperationReplace">
			<xpath>Defs/PawnKindDef[defName="VFE_Mech_Centipede" or defName="VFE_Mech_AdvancedCentipede"]/combatPower</xpath>
			<value>
				<combatPower>580</combatPower>
			</value>
		  </li>
		  
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/PawnKindDef[defName="VFE_Mech_Centipede" or 
			defName="VFE_Mech_AdvancedLancer" or
			defName="VFE_Mech_Lancer"
			]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>100</min>
				  <max>100</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>
		  
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/PawnKindDef[defName="VFE_Mech_Knight" or 
			defName="VFE_Mech_Pikeman"
			]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>3</min>
				  <max>5</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>
		  
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/PawnKindDef[defName="VFE_Mech_AdvancedKnight"]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>6</min>
				  <max>6</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>
		  
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/PawnKindDef[defName="VFE_Mech_AdvancedPikeman" or
			defName="VFE_Mech_AdvancedKnight" or
			defName="VFE_Mech_AdvancedCentipede"
			]</xpath>
			<value>
			  <li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
				  <min>12</min>
				  <max>12</max>
				</primaryMagazineCount>
			  </li>
			</value>
		  </li>
		
      </operations>
    </match>
  </Operation>

</Patch>